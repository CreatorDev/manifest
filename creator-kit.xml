<?xml version="1.0" encoding="UTF-8"?>
<manifest>
	<remote name="CreatorDev"
		fetch="https://github.com/CreatorDev"/>
	<remote name="CreatorKit"
		fetch="https://github.com/CreatorKit"/>
	<remote name="FlowM2M"
		fetch="https://github.com/FlowM2M"/>

	<default remote="CreatorDev" revision="master" sync-j="4"/>

	<!-- Tools -->
	<project path="tools/creator-docker" name="creator-docker"/>
	<project path="tools/creator-docs" remote="CreatorKit" name="creator-docs"/>

	<!-- Linux distributions -->
	<project path="dist/openwrt" name="openwrt" revision="ci40"/>
	<project path="dist/openwrt-feeds/ci40-platform-feed" name="Ci40-platform-feed"/>
	<project path="dist/openwrt-feeds/creator-feed" name="Creator-feed"/>
	<project path="dist/openwrt-feeds/packages" name="packages" revision="creator"/>

	<!-- Linux distribution agnostic packages -->
	<project path="packages/awalwm2m" remote="FlowM2M" name="AwaLWM2M"/>
	<project path="packages/board-test" name="board-test"/>
	<project path="packages/linux" name="linux"/>
	<project path="packages/proddata" name="proddata"/>
	<project path="packages/u-boot" name="u-boot" revision="2015.10"/>
	<project path="packages/uccp420wlan" name="uccp420wlan" revision="rel"/>

	<!-- Ci40 OpenWRT specific packages -->
	<project path="packages/ci40-info-daemon" name="ci40-info-daemon" revision="dev"/>
	<project path="packages/ci40-onboarding-scripts" name="ci40-onboarding-scripts"/>
	<project path="packages/ci40-provision-daemon" name="ci40-provision-daemon"/>
	<project path="packages/letmecreate" name="LetMeCreate"/>
	<project path="packages/PyLetMeCreate" name="PyLetMeCreate"/>

	<!-- RTOS -->
	<project path="dist/contiki" name="contiki" revision="3.0-mikro-e"/>

	<!-- Ci40 gateway repositories -->
	<project path="dist/openwrt" remote="CreatorDev" name="openwrt" revision="ci40"/>
	<project path="dist/openwrt-ckt-feeds" name="openwrt-ckt-feeds"/>
	<project path="dist/Ci40-platform-feed" remote="CreatorDev" name="Ci40-platform-feed"/>
	<project path="packages/button-led-controller" name="button-led-controller"/>
	<project path="packages/motion-led-controller" name="motion-led-controller"/>
	<project path="packages/relay-gateway" name="relay-gateway"/>
	<project path="packages/u-boot" remote="CreatorDev" name="u-boot" revision="2015.10"/>
</manifest>
